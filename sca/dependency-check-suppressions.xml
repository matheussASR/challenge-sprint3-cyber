<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
  <!-- Exemplo 1: suprimir um CVE específico (com justificativa e prazo) -->
  <suppress>
    <notes>Lib usada só em dev; não vai a runtime. Revisar até 2025-12-31.</notes>
    <cve>CVE-2020-12345</cve>
    <cvssBelow>7.0</cvssBelow>
    <until>2025-12-31</until>
  </suppress>

  <!-- Exemplo 2: suprimir por CPE (ajuste vendor/produto/versão ao seu caso) -->
  <suppress>
    <notes>Falso positivo no mapeamento CPE do pacote X.</notes>
    <cpe>cpe:2.3:a:lodash:lodash:*:*:*:*:*:node.js:*:*</cpe>
    <cvssBelow>7.0</cvssBelow>
  </suppress>
</suppressions>
